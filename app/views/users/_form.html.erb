<%= form_for @user, :url => { :action => "create" } do |f| %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>

  <p>
  <%= f.label :email %><br/>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label :location %><br/>
  <%= f.text_field :location %>
  </p>
  <p>
  <%= f.label :password %><br/>
  <%= f.password_field :password %>
  </p>

  <div class="actions">
    <%= f.submit "Submit", :class=>"btn primary" %>
  </div>

<% end %>
