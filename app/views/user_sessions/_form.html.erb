<%= form_for @user_session, :url => { :action => "create" } do |f| %>
  <% if @user_session.errors.full_messages[0] %>
    <ul class="alert-message block-message error">
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

  <% else %>

  <% end %>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password%>
    </div>
  </div>
  <div class="actions">
  <%= link_to 'Forgot Password', :controller=> "password_resets", :action=> "new" %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class=>"btn primary" %>
  </div>
<% end %>
